    <script>
        $(function(){
            var data = <?php echo $betInfo;?>;
            var c;
            $.each(data,function(index,item){
                c = $('.mod-bet').eq(index).find('.kj-num ul');
                kjNumAimation(c, item.num.split(','));
                $('.mod-bet').eq(index).attr('data-val', item.codes);
            });

            // 随机号码动画
            function kjNumAimation(el, json){
                setTimeout(function(){
                        var kjNumUl = el;
                        $(json).each(function(index){
                            $(kjNumUl[index]).css('top', -(parseInt(json[index], 10) - 1)*100 + '%');
                        })
                }, 0)
            }

            var closeTag = true;
            $('.change').on('click', function () {
                var playType = $(this).parents('.mod-bet').attr('data-type');
                var cobj = $(this);
                if(closeTag){
                    closeTag = false;
                    $.ajax({
                        type: 'POST',
                        url: '/ios/event/randBall',
                        data: {playType:playType},
                        dataType: "json",
                        success: function(json){
                            if(json.status == '1'){
                                var dd = cobj.parents('.mod-bet').find('.kj-num ul');
                                kjNumAimation(dd, json.data.num.split(','));
                                cobj.parents('.mod-bet').attr('data-val', json.data.codes);
                                closeTag = true;
                            }else{
                                var backUrl = window.location.href;
                                window.webkit.messageHandlers.relogin.postMessage({url:backUrl});
                                closeTag = true;
                            }
                            
                        },
                        error: function(){
                            $.tips({
                                content:'网络异常，请稍后再试',
                                stayTime:2000
                            });
                            closeTag = true;
                        }
                    })
                }    
            })

            $('.pay').on('click', function () {
                var playType = $(this).parents('.mod-bet').attr('data-type');
                var codes = $(this).parents('.mod-bet').attr('data-val');

                if(closeTag){
                    closeTag = false;
                    $.ajax({
                        type: 'POST',
                        url: '/ios/event/doBetZhbzbp',
                        data: {playType:playType,codes:codes},
                        dataType: "json",
                        success: function(json){
                            if(json.status == '1'){
                                window.location.href = json.data;
                                closeTag = true;
                            }else if(json.status == '2'){
                                var backUrl = window.location.href;
                                window.webkit.messageHandlers.relogin.postMessage({url:backUrl});
                                closeTag = true;
                            }else if(json.status == '3'){
                                var backUrl = window.location.href;
                                window.webkit.messageHandlers.goBind.postMessage({url:backUrl});
                                closeTag = true;
                            }else{
                                $.tips({
                                    content:json.msg,
                                    stayTime:2000
                                });
                                closeTag = true;
                            }
                        },
                        error: function(){
                            $.tips({
                                content:'网络异常，请稍后再试',
                                stayTime:2000
                            });
                            closeTag = true;
                        }
                    })
                }    
            })

        })
    </script>
