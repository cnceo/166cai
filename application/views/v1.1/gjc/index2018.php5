	$(function(){
		var lid = 44, codes = {44:{}, 45:{}}, bet = {44:0, 45:0}, multi = {44:1, 45:1}, oddmin = {44:Number.POSITIVE_INFINITY, 45:Number.POSITIVE_INFINITY}, oddmax = {44:0, 45:0}, cname = {44:'冠军彩', 45:'冠亚军彩'}
		//冠军彩选中
		$('.euro-group').on('click', '.euro-group-tr:not(.out):not(.win):not(.stop)', function () {
			var code;
			$(this).toggleClass('checked');
			code = {'name':$(this).data('name'), 'odd':parseInt($(this).data('odd'), 10), mid:$(this).data('index')};
			if ($(this).hasClass('checked')) {
				codes[lid][$(this).data('index')] = code;
				bet[lid]++;
			}else {
				delete codes[lid][$(this).data('index')];
				bet[lid]--;
			}
			refreshGjOdd(lid);
			renderGj();
		})
		$('.euro-tab').on('click', 'li', function(){
			$(this).addClass('current').siblings().removeClass('current');
			$('.euro-con').find('.euro-item').eq($(this).index()).show().siblings().hide();
			if ($(this).index() == 0) {
				$('.euro-item:last').find('.euro-group-list .euro-group-tr').filter('.checked').trigger('click');
				gyjmultiModifier.setValue(1);
			} else {
				$('.euro-item:first').find('.euro-group-list .euro-group-tr').filter('.checked').trigger('click');
				gjmultiModifier.setValue(1);
			}
			lid = 44 + $(this).index();
		})
		
		function refreshGjOdd(lid) {
			oddmin[lid] = Number.POSITIVE_INFINITY, oddmax[lid] = 0;
			for (i in codes[lid]) {
				if (codes[lid][i].odd > oddmax[lid]) oddmax[lid] = codes[lid][i].odd;
				if (codes[lid][i].odd < oddmin[lid]) oddmin[lid] = codes[lid][i].odd;
			}
		}
		function pad(i) {
		    i = '' + i;
		    if (i.length < 2) i = '0' + i;
		    return i;
		}
		var renderGj = function() {
			var oddstr = '', $el;
			if (oddmin[lid] == oddmax[lid] || oddmax[lid] == 0) {
				oddstr = oddmax[lid] * multi[lid]/100 * 2;
			}else {
				oddstr = (oddmin[lid] * multi[lid]/100 * 2)+'~'+(oddmax[lid] * multi[lid]/100 * 2);
			}
			if (lid == 44) $el = $('.euro-bet-bar-placeholder:first');
			else $el = $('.euro-bet-bar-placeholder:last');
			$el.find('em:first').html(bet[lid] * multi[lid] * 2);
			$el.find('em:last').html(oddstr);
		}
		function castStr(){
			var typeArr = {44 : 'GJ', 45 : 'GYJ'}, codestr = typeArr[lid]+'|18001=', codeArr = [];
			$.each(codes[lid], function(i, code) {
				codeArr.push(pad(code.mid)+'('+code.odd/100+')');
			})
			codeArr.sort(function(a, b){
				amid = parseInt(a, 10);
				bmid = parseInt(b, 10);
				return amid > bmid ? 1 : ( amid < bmid ? -1 : 0 );
			})
			codestr += codeArr.join('/')+'|'+codeArr.length;
			return codestr;
		}
